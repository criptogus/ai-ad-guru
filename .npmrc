
# Use a simplified npm configuration to fix Rollup build issues
node-linker=hoisted

# Prevent rollup from trying to install platform-specific binaries
ignore-scripts=true

# Add this to force specific behaviors to avoid build errors
shamefully-hoist=true

# Force npm to use a pure JavaScript implementation of Rollup
auto-install-peers=true

# Explicitly skip optional dependencies to avoid platform-specific issues
omit=optional

# Enable legacy peer deps to fix compatibility issues 
legacy-peer-deps=true

# Additional optional deps avoidance
optional=false

# Setting no-bin-links to avoid platform-specific binaries
no-bin-links=true
