
# Prevent downloading platform-specific binaries
ignore-platform=true
platform=neutral
libc=musl

# Skip native builds and optional dependencies
ignore-scripts=true
optional=false
omit=optional

# Force using pure JS implementations
prefer-offline=true
node-linker=hoisted
shamefully-hoist=true
legacy-peer-deps=true

# Force pure JavaScript versions of dependencies
force-pure-lockfile=true

# Use exact versions to improve reproducibility
save-exact=true

# Use central cache
cache-min=999999999
