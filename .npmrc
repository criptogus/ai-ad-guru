
# Use a simplified npm configuration to fix Rollup build issues
node-linker=hoisted

# Resolve optional dependencies issues
omit=optional

# Enable legacy peer deps to fix compatibility issues
legacy-peer-deps=true

# Prevent rollup from trying to install platform-specific binaries
ignore-scripts=true

# Add this to force specific behaviors to avoid build errors
shamefully-hoist=true

# Explicitly disable optional platform dependencies
optional=false
